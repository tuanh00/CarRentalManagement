<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <!-- Centering LinearLayout with contents in the middle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_gravity="center_vertical">

        <!-- App Logo at the top -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logocar2"
            android:contentDescription="App Logo"
            android:layout_marginBottom="24dp" />

        <!-- First Name Input Field -->
        <EditText
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name" />

        <!-- Last Name Input Field -->
        <EditText
            android:id="@+id/lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name" />

        <!-- Date of Birth Input Field -->
        <EditText
            android:id="@+id/dobEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Birth (YYYY-MM-DD)"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none" />

        <!-- Phone Number Input Field -->
        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="number" />

        <!-- Driver License ID Input Field -->
        <EditText
            android:id="@+id/driverLicenseId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Driver License ID (Optional)"
            android:inputType="text" />

        <!-- Email Input Field -->
        <EditText
            android:id="@+id/emailRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <!-- Password Input Field -->
        <EditText
            android:id="@+id/passwordRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword" />

        <!-- Confirm Password Input Field -->
        <EditText
            android:id="@+id/confirmPasswordRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword" />

        <!-- Register Button -->
        <Button
            android:id="@+id/registerbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@color/textColor"
            android:layout_marginTop="12dp" />

        <!-- Login Button -->
        <Button
            android:id="@+id/loginLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:backgroundTint="@color/secondaryColor"
            android:textColor="@color/textColor"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</FrameLayout>

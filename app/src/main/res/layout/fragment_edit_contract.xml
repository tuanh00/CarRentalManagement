<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/linearLayoutEditContract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Contract ID (Hidden or Displayed for reference) -->
        <TextView
            android:id="@+id/textViewContractIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contract ID:"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewContractId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textSize="16sp" />

        <!-- User Full Name -->
        <TextView
            android:id="@+id/textViewUserFullNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textViewUserFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textSize="16sp" />

        <!-- Car ID -->
        <TextView
            android:id="@+id/textViewCarIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car ID:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textViewCarId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textSize="16sp" />

        <!-- Start Date -->
        <TextView
            android:id="@+id/textViewStartDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textViewStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textSize="16sp" />

        <!-- End Date -->
        <TextView
            android:id="@+id/textViewEndDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textViewEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textSize="16sp" />

        <!-- Created At -->
        <TextView
            android:id="@+id/textViewCreatedAtLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created At:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textViewCreatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textSize="16sp" />

        <!-- Updated At -->
        <TextView
            android:id="@+id/textViewUpdatedAtLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Updated At:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textViewUpdatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textSize="16sp" />

        <!-- Total Payment -->
        <TextView
            android:id="@+id/textViewTotalPaymentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Payment:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textViewTotalPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textSize="16sp" />

        <!-- Current Status -->
        <TextView
            android:id="@+id/textViewCurrentStatusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Status:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textViewCurrentStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textSize="16sp" />

        <!-- Status Toggle -->
        <TextView
            android:id="@+id/textViewToggleStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Status to Completed:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/statusSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed" />

        <!-- Update Status Button -->
        <Button
            android:id="@+id/buttonUpdateStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Status"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>

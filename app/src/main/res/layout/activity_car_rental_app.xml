<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@color/backgroundColor">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/customerToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:padding="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Logo ImageView -->
            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Logo"
                android:src="@drawable/logocar2" />

            <!-- Title TextView -->
            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Dashboard"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="8dp"/>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search"
        android:padding="12dp"
        android:background="@color/white"
        android:layout_marginBottom="16dp"
        android:textColorHint="@color/black"/>

    <!-- Date Time Inputs -->
    <EditText
        android:id="@+id/fromDateTimePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select desired starting date"
        android:focusable="false"
        android:clickable="true"
        android:padding="12dp"
        android:background="@color/white"
        android:layout_marginBottom="8dp"
        android:textColorHint="@color/black"/>

    <EditText
        android:id="@+id/toDateTimePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select desired returning date"
        android:focusable="false"
        android:clickable="true"
        android:padding="12dp"
        android:background="@color/white"
        android:layout_marginBottom="16dp"
        android:textColorHint="@color/black"/>

    <!-- RecyclerView - expands to fill available space -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCars"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp" />

    <!-- Fragment Container for RentCarFragment -->
    <FrameLayout
        android:id="@+id/customerFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Buttons Section (Centered) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/searchButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Search for Car"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@color/textColor"/>

        <Button
            android:id="@+id/signOutButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sign Out"
            android:backgroundTint="@color/secondaryColor"
            android:textColor="@color/textColor"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>
